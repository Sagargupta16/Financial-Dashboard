# Financial Dashboard Environment Variables

# React App Environment
# Options: development, production, test
REACT_APP_ENV=development

# Enable/Disable Debug Logging
# Set to 'false' in production
REACT_APP_DEBUG_MODE=true

# Application Version
REACT_APP_VERSION=0.1.0

# API Configuration (if needed in future)
# REACT_APP_API_URL=https://api.example.com
# REACT_APP_API_KEY=your_api_key_here

# Analytics (optional)
# REACT_APP_GA_TRACKING_ID=
# REACT_APP_SENTRY_DSN=

# Feature Flags
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_PERSISTENCE=true
REACT_APP_ENABLE_ADVANCED_CHARTS=true

# Chart Configuration
REACT_APP_MAX_CHART_POINTS=1000
REACT_APP_DEFAULT_TRANSACTIONS_PER_PAGE=25
